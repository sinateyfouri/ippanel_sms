<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ippanel_sms_template_list" model="ir.ui.view">
    <field name="name">ippanel.sms.template.list</field>
    <field name="model">ippanel.sms.template</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_ippanel_sms_template_form" model="ir.ui.view">
    <field name="name">ippanel.sms.template.form</field>
    <field name="model">ippanel.sms.template</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="toggle_active" type="object" string="فعال/غیرفعال" class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="message"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
